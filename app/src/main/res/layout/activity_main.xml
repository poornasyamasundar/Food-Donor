<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/user_profile"
            android:layout_marginTop="20dp"
            android:background="#4FA9F1">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:text="Top Donors"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Time"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Time"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Time"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </TableRow>
        </TableLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/DonateCard"
            android:layout_width="181dp"
            android:layout_height="181dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/donate_food" />

                <Button
                    android:id="@+id/DonateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="DONATE FOOD"
                    android:textStyle="bold" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/RecieveCard"
            android:layout_width="181dp"
            android:layout_height="181dp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/DonateCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DonateCard"
            app:layout_constraintTop_toTopOf="@+id/DonateCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/receive_food2" />

                <Button
                    android:id="@+id/RecieveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="RECEIVE FOOD"
                    android:textStyle="bold" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="859dp" />

        <Button
            android:id="@+id/view_donors"
            android:layout_width="166dp"
            android:layout_height="58dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:text="View Donors"
            app:layout_constraintEnd_toStartOf="@+id/view_receivers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/view_receivers"
            android:layout_width="166dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:text="View Receivers"
            app:layout_constraintBottom_toBottomOf="@+id/view_donors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_donors" />

        <Button
            android:id="@+id/user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app was developed by IIT Tirupati students"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DonateCard"
            tools:layout_editor_absoluteX="9dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="It is estimated that a person dies of hunger or hunger-related causes every ten second. Please Donate if you can."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_donors"
            android:textSize="20dp"

            android:gravity="center"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>